<div class="flex flex-row gap-4 w-full max-w-md rounded-lg p-4 relative">
	<img class="w-32 rounded-md shadow-lg transition-all hover:scale-105" src="<%= bookCoverImgPath %>" alt="Capa do livro">

	<div class="flex flex-col justify-between flex-grow">
		<div>
			<h2 class="font-semibold text-lg text-gray-2 leading-tight mb-1">
				<%= bookName %>
			</h2>
			<p class="text-sm text-gray-3 font-medium">
				<%= bookAuthor %>
			</p>
		</div>

		<div class="flex items-center gap-1">
			<span class="material-symbols-outlined text-yellow-400 text-lg">star</span>
			<span class="font-semibold text-gray-700">
				<%= bookRating.toFixed(1) %>
			</span>
		</div>

		<span class="font-bold text-lg text-gray-900">R$ <%= bookPrice.toFixed(2) %></span>

		<button
			class="flex items-center justify-center gap-2 w-full h-6 mt-2 px-2 py-2 border border-light-title text-light-title font-medium text-[12px] rounded-md hover:bg-light-title hover:text-white hover:cursor-pointer transition-colors duration-200">
			<span class="material-symbols-outlined" style="font-size: 14px">shopping_cart</span>
			Adicionar ao carrinho
		</button>
	</div>
</div>
