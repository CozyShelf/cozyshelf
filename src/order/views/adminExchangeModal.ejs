<!-- Modal para Admin Confirmar Itens que Voltarão ao Estoque -->
<div id="confirm-stock-modal"
    class="fixed inset-0 bg-[#343434]/70 backdrop-blur-sm flex items-center justify-center z-50 hidden">
    <div
        class="bg-white rounded-2xl shadow-2xl w-full max-w-[650px] max-h-[85vh] overflow-hidden flex flex-col animate-[slideUp_0.3s_ease-out]">

        <div
            class="bg-gradient-to-br from-[#863C13] to-[#6F2D08] px-8 py-7 flex items-center justify-between border-b-[3px] border-[#E77619]">
            <h2 class="text-2xl font-bold text-[#F5ECE1] tracking-tight">Confirmar Itens para Estoque</h2>
            <button type="button" id="close-confirm-stock-modal" aria-label="Fechar modal"
                class="bg-[#F5ECE1]/15 text-[#F5ECE1] w-10 h-10 rounded-full flex items-center justify-center hover:bg-[#F5ECE1]/25 transition-all duration-200 focus:outline-none">
                <span class="material-symbols-outlined text-2xl">close</span>
            </button>
        </div>

        <div class="flex-1 overflow-y-auto px-8 py-7">
            <input type="hidden" id="exchange-order-id" name="orderId" value="<%= order.id %>" />

            <div class="bg-gradient-to-br from-[#E8F5E8] to-[#D4EDD4]/20 px-5 py-4 rounded-xl border-2 border-[#A8D5A8] mb-6">
                <div class="flex items-center gap-3 mb-2">
                    <span class="material-symbols-outlined text-[#2E7D32] text-xl">info</span>
                    <h3 class="text-[#2E7D32] font-semibold text-base">Informações da Troca</h3>
                </div>
                <p class="text-[#2E7D32] text-sm ml-8">
                    Selecione quais itens devem voltar ao estoque. Apenas os itens marcados terão sua quantidade adicionada ao estoque disponível.
                </p>
            </div>

            <div
                class="bg-gradient-to-br from-[#F5ECE1] to-[#D6AE7C]/20 px-5 py-[18px] rounded-xl border-2 border-[#D6AE7C] flex items-center gap-3 mb-6 cursor-pointer hover:border-[#E77619] transition-all duration-200">
                <input type="checkbox" id="return-all-to-stock"
                    class="appearance-none w-[22px] h-[22px] border-[2.5px] border-[#863C13] rounded-md cursor-pointer transition-all duration-200 checked:bg-[#E77619] checked:border-[#E77619] checked:after:content-['✓'] checked:after:text-white checked:after:text-base checked:after:font-bold checked:after:absolute checked:after:top-1/2 checked:after:left-1/2 checked:after:-translate-x-1/2 checked:after:-translate-y-1/2 relative flex-shrink-0" />
                <label for="return-all-to-stock" class="text-[#863C13] font-semibold text-base cursor-pointer select-none">
                    Retornar todos os itens ao estoque
                </label>
            </div>

            <ul id="stock-return-list" class="flex flex-col gap-4">
                <% if (exchange && exchange.exchangeItems && exchange.exchangeItems.length > 0) { %>
                    <!-- Mostrar itens solicitados para troca -->
                    <% exchange.exchangeItems.forEach(function(item, index) { %>
                        <% const book = exchangeBooks.find(b => b.id === item.bookId); %>
                        <% if (book) { %>
                            <li
                                class="bg-white border-2 border-[#F5ECE1] rounded-2xl p-5 flex items-center gap-5 hover:border-[#D6AE7C] hover:shadow-[0_8px_24px_rgba(134,60,19,0.12)] hover:-translate-y-0.5 transition-all duration-300 relative overflow-hidden before:absolute before:left-0 before:top-0 before:bottom-0 before:w-1 before:bg-[#E77619] before:scale-y-0 hover:before:scale-y-100 before:transition-transform before:duration-300 group">
                                <img src="<%= book.coverPath %>" alt="Capa do livro"
                                    class="w-[70px] h-[100px] object-cover rounded-xl shadow-md border-2 border-[#F5ECE1] flex-shrink-0" />
                                
                                <div class="flex-1 flex flex-col gap-1.5">
                                    <label for="stock-book-<%= book.id %>"
                                        class="text-[#863C13] font-semibold text-base leading-tight cursor-pointer">
                                        <%= book.name %>
                                    </label>
                                    <span class="text-[#898989] text-[13px] font-medium">
                                        Solicitado para troca: <%= item.quantity %> unidade(s)
                                    </span>
                                    <span class="text-[#2E7D32] text-[12px] font-medium">
                                        Estoque atual: <%= book.stock || 0 %> unidade(s)
                                    </span>
                                </div>

                                <div class="flex flex-col items-center gap-2">
                                    <label for="stock-quantity-<%= book.id %>" class="text-[#898989] text-xs font-medium uppercase tracking-wider">
                                        Retornar
                                    </label>
                                    <input type="number" min="0" max="<%= item.quantity %>" value="<%= item.quantity %>"
                                        id="stock-quantity-<%= book.id %>" 
                                        data-book-id="<%= book.id %>"
                                        data-max="<%= item.quantity %>"
                                        class="stock-quantity w-[70px] px-3 py-2.5 border-2 border-[#D6AE7C] rounded-xl text-center font-semibold text-base text-[#863C13] focus:outline-none focus:border-[#E77619] focus:ring-[3px] focus:ring-[#E77619]/15 transition-all duration-200" />
                                </div>

                                <div class="flex flex-col items-center gap-2">
                                    <span class="text-[#2E7D32] text-xs font-medium uppercase tracking-wider">Aceitar</span>
                                    <input type="checkbox"
                                        class="stock-checkbox appearance-none w-[22px] h-[22px] border-[2.5px] border-[#863C13] rounded-md cursor-pointer transition-all duration-200 checked:bg-[#2E7D32] checked:border-[#2E7D32] checked:after:content-['✓'] checked:after:text-white checked:after:text-base checked:after:font-bold checked:after:absolute checked:after:top-1/2 checked:after:left-1/2 checked:after:-translate-x-1/2 checked:after:-translate-y-1/2 relative flex-shrink-0"
                                        name="stockReturnItems" 
                                        value="<%= book.id %>" 
                                        id="stock-book-<%= book.id %>"
                                        data-book-id="<%= book.id %>"
                                        checked />
                                </div>
                            </li>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <!-- Fallback: mostrar todos os livros do pedido -->
                    <% books.forEach(function(book, index) { %>
                        <% const orderItem = order.items.find(item => item.bookId === book.id); %>
                        <% if (orderItem) { %>
                            <li
                                class="bg-white border-2 border-[#F5ECE1] rounded-2xl p-5 flex items-center gap-5 hover:border-[#D6AE7C] hover:shadow-[0_8px_24px_rgba(134,60,19,0.12)] hover:-translate-y-0.5 transition-all duration-300 relative overflow-hidden before:absolute before:left-0 before:top-0 before:bottom-0 before:w-1 before:bg-[#E77619] before:scale-y-0 hover:before:scale-y-100 before:transition-transform before:duration-300 group">
                                <img src="<%= book.coverPath %>" alt="Capa do livro"
                                    class="w-[70px] h-[100px] object-cover rounded-xl shadow-md border-2 border-[#F5ECE1] flex-shrink-0" />
                                
                                <div class="flex-1 flex flex-col gap-1.5">
                                    <label for="stock-book-<%= book.id %>"
                                        class="text-[#863C13] font-semibold text-base leading-tight cursor-pointer">
                                        <%= book.name %>
                                    </label>
                                    <span class="text-[#898989] text-[13px] font-medium">
                                        Quantidade no pedido: <%= orderItem.quantity %> unidade(s)
                                    </span>
                                </div>

                                <div class="flex flex-col items-center gap-2">
                                    <label for="stock-quantity-<%= book.id %>" class="text-[#898989] text-xs font-medium uppercase tracking-wider">
                                        Retornar
                                    </label>
                                    <input type="number" min="0" max="<%= orderItem.quantity %>" value="<%= orderItem.quantity %>"
                                        id="stock-quantity-<%= book.id %>" 
                                        data-book-id="<%= book.id %>"
                                        data-max="<%= orderItem.quantity %>"
                                        class="stock-quantity w-[70px] px-3 py-2.5 border-2 border-[#D6AE7C] rounded-xl text-center font-semibold text-base text-[#863C13] focus:outline-none focus:border-[#E77619] focus:ring-[3px] focus:ring-[#E77619]/15 transition-all duration-200" />
                                </div>

                                <div class="flex flex-col items-center gap-2">
                                    <span class="text-[#2E7D32] text-xs font-medium uppercase tracking-wider">Aceitar</span>
                                    <input type="checkbox"
                                        class="stock-checkbox appearance-none w-[22px] h-[22px] border-[2.5px] border-[#863C13] rounded-md cursor-pointer transition-all duration-200 checked:bg-[#2E7D32] checked:border-[#2E7D32] checked:after:content-['✓'] checked:after:text-white checked:after:text-base checked:after:font-bold checked:after:absolute checked:after:top-1/2 checked:after:left-1/2 checked:after:-translate-x-1/2 checked:after:-translate-y-1/2 relative flex-shrink-0"
                                        name="stockReturnItems" 
                                        value="<%= book.id %>" 
                                        id="stock-book-<%= book.id %>"
                                        data-book-id="<%= book.id %>"
                                        checked />
                                </div>
                            </li>
                        <% } %>
                    <% }); %>
                <% } %>
            </ul>

            <% if ((!exchange || !exchange.exchangeItems || exchange.exchangeItems.length === 0) && (!books || books.length === 0)) { %>
                <div class="bg-gray-50 border-2 border-gray-200 rounded-2xl p-8 text-center">
                    <span class="text-gray-500 text-sm">Nenhum item disponível para retorno ao estoque.</span>
                </div>
            <% } %>
        </div>

        <div class="px-8 py-6 border-t-2 border-[#F5ECE1] flex justify-between items-center">
            <div class="text-sm text-[#898989]">
                <span id="selected-count">0</span> item(s) selecionado(s)
            </div>
            <div class="flex gap-3">
                <button type="button" id="confirm-stock-return"
                    class="px-8 py-3.5 rounded-full font-semibold text-[15px] tracking-wide bg-[#2E7D32] text-white border-2 border-[#2E7D32] hover:bg-[#1B5E20] transition-all duration-200">
                    Confirmar Retorno ao Estoque
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>s