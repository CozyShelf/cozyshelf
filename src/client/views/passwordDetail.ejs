<form class="flex flex-col w-full gap-10 mt-9 mb-15 px-32" id="update-password-form">
    <div class="flex flex-col gap-6">
        <h1 class="font-semibold text-[20px]">Alterar Senha</h1>
        <div class="flex flex-row gap-10">
            <div class="flex flex-col w-full gap-4">
                <label class="flex flex-col text-[14px] gap-2.5">
                    Senha Atual *
                    <input placeholder="Digite sua senha atual" class="border rounded-[5px] border-gray h-10 p-2.5 w-full"
                        type="password" name="current-password" required>
                </label>
                <label class="flex flex-col text-[14px] gap-2.5">
                    Nova Senha *
                    <input placeholder="Digite sua nova senha" class="border rounded-[5px] border-gray h-10 p-2.5 w-full"
                        type="password" name="new-password" required>
                </label>
                <label class="flex flex-col text-[14px] gap-2.5">
                    Confirmar Nova Senha *
                    <input placeholder="Confirme sua nova senha" class="border rounded-[5px] border-gray h-10 p-2.5 w-full"
                        type="password" name="confirm-new-password" required>
                </label>
            </div>
        </div>
        <div class="flex justify-end">
            <button class="font-medium text-white bg-light-green w-[200px] h-11 rounded-[5px] cursor-pointer hover:bg-dark-green">
                Salvar
            </button>
        </div>
    </div>
</form>
<script src="/scripts/handleSubmit.mjs"></script>

