<form class="flex flex-col w-full gap-10 mt-9 mb-15 px-32" id="card-form">
    <div class="flex flex-col gap-5">
        <h1 class="font-semibold text-[20px]"><%= title %></h1>

        <div class="flex flex-col gap-10" id="cards">
            <div class="flex flex-col gap-3 justify-start" id="card">
                <div class="flex flex-row gap-10">
                    <%- include('buttons/toggleButton.ejs', { toggleName: "card-is-preferred" ,
                        toggleMessage: "Marcar como preferencial" })%>
                </div>

                <div class="flex flex-col gap-5">
                    <div class="flex flex-row gap-10">
                        <label class="flex flex-col text-[12px] gap-3 w-full">
                            Número do Cartão *
                            <input placeholder="Ex: XXXX XXXX XXXX" class="border rounded-[5px] border-gray h-10 p-2.5" type="text"
                                name="card-number" required>
                        </label>
                        <label class="flex flex-col text-[12px] gap-3 w-full">
                            CVV *
                            <input placeholder="XXX" class="border rounded-[5px] border-gray h-10 p-2.5" type="text" name="card-cvv"
                                required>
                        </label>
                    </div>
                    <div class="flex flex-row gap-10">
                        <label class="flex flex-col text-[12px] gap-3 w-full">
                            Nome impresso no cartão *
                            <input placeholder="Ex: JOAO S D SILVA" class="border rounded-[5px] border-gray h-10 p-2.5" type="text"
                                name="card-impress-name" required>
                        </label>
                        <label class="flex flex-col text-[12px] gap-3 w-full">
                            Bandeira *
                            <select name="card-flag" class="border rounded-[5px] border-gray h-10 p-2.5" required>
                                <option value="">Selecione...</option>
                                <option value="Visa">Visa</option>
                                <option value="Mastercard">Mastercard</option>
                                <option value="Elo">Elo</option>
                            </select>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex flex-row justify-between items-center mt-2">
            <a href="/addresses" class="font-semibold text-sm bg-brown text-white rounded hover:bg-dark-brown w-[150px] h-10 flex items-center justify-center">
            Voltar
            </a>
            <button type="submit" class="font-medium text-sm text-white bg-light-green w-[150px] h-10 rounded-[5px] cursor-pointer hover:bg-dark-green flex items-center justify-center">
            Salvar
            </button>
        </div>
    </div>
</form>
<script src="/scripts/handleSubmit.mjs"></script>
