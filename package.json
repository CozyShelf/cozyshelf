{
	"name": "cozyshelf",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"build": "tsc",
		"start": "npm run build && node build/index.js",
		"start:dev": "npm run db:up && tsx watch src/index.ts && npm run tailwind",
		"db:up": "docker compose up -d db",
		"db:down": "docker compose down",
		"db:down_volumes": "docker compose down -v",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles",
		"test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --watch",
		"test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --watch --coverage",
		"tailwind": "postcss public/styles/tailwind.css -o public/styles/main.css -w"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@jest/globals": "^30.0.4",
		"@types/express": "^5.0.3",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.2.1",
		"autoprefixer": "^10.4.21",
		"dotenv": "^17.1.0",
		"jest": "^30.0.4",
		"postcss": "^8.5.6",
		"supertest": "^7.1.3",
		"tailwindcss": "^4.1.12",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"tsc-alias": "^1.8.16",
		"tslint": "^5.20.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@types/supertest": "^6.0.3",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"express-ejs-layouts": "^2.5.1",
		"pg": "^8.16.3",
		"postcss-cli": "^11.0.1",
		"typeorm": "^0.3.25"
	}
}
